pipeline {
  agent {
    label 'jenkins-slave'
  }
  options {
    buildDiscarder(logRotator(numToKeepStr: '13'))
    disableConcurrentBuilds()
  }
  parameters {
    string(
        name: 'Namespace',
        description: 'Enter a name for the RDS Namespace',
    )
  }
  stages {
    stage("Show Variables") {
      steps {
        script {
          sh 'make devops-print-variables'
        }
      }
    }
      stage('Create RDS Instance'){
        steps{
          script{
            sh'make create-instance INSTANCE_NAME=${params.name}'
          }
        }
      }

      stage('Populate Database'){
        steps{
          script{
            sh 'make populate-database'
          }
        }
      }
  }
  post {
    always {
      sh 'make devops-test-cleanup'
    }
  }
}
