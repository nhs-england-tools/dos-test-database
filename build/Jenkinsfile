pipeline {
  agent {
    label 'jenkins-slave'
  }
  options {
    buildDiscarder(logRotator(numToKeepStr: '13'))
    disableConcurrentBuilds()
  }
  parameters {
    string(
        name: 'Namespace',
        description: 'Enter a name for the RDS Namespace',
    )
  }
  stages {
    stage("Show Variables") {
      steps {
        script {
          sh 'make devops-print-variables'
        }
      }
    }
      stage('Create RDS Instance'){  //choose name
        steps{
          sh 'echo Create RDS Instance'
          //sh """
          //make create-instance INSTANCE_NAME=${params.Namespace}
          //"""
        }
      }

      stage('Populate Database'){
        steps{
        sh 'echo Deleting namespaces'
        //sh """
        //make populate-database
        //"""
        }
      }
  }
  post {
    always {
      sh 'echo Test'
      sh 'make devops-test-cleanup'
    }
  }
}
