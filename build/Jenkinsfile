pipeline {
  agent {
    label 'jenkins-slave'
  }
  options {
    buildDiscarder(logRotator(daysToKeepStr: '6'))
  }
  parameters {
    string(
        name: 'rds_instance_name',
        description: 'Enter a name for the DoS DB RDS instance',
    )
    choice(
        name: 'build_action',
        choices: 'create\ndestroy',
        description: 'Enter whether your looking to create an DoS DB RDS instance or delete one'
    )
  }
  stages {
    stage("Show Variables") {
      steps {
        sh 'make devops-print-variables'
      }
    }

    stage('Create RDS Instance'){
      steps{
        sh 'make docker-config'
        sh 'make create-instance INSTANCE_NAME=${rds_instance_name}'
      }
    }

    stage('Populate Database'){
      steps{
        sh 'export DB_PASSWORD=$(make secret-fetch NAME=${rds_instance_name}-nonprod-dos_db_password) && make populate-database INSTANCE_NAME=${rds_instance_name}'
        sh 'make delete-populate-database-k8s-deployment INSTANCE_NAME=${rds_instance_name}'
      }
    }
  }
  post {
    always {
      sh 'make devops-test-cleanup'
    }
  }
}
